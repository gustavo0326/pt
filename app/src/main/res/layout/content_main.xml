<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@drawable/mirador1">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:id="@+id/btnMapa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton_verde" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Eventos"
        android:id="@+id/btnEvento"
        android:background="@drawable/boton_verde"
        android:layout_below="@+id/btnAtracciones"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Promociones"
        android:id="@+id/btnPromo"
        android:background="@drawable/boton_verde"
        android:layout_below="@+id/btnEvento"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Atracciones"
        android:id="@+id/btnAtracciones"
        android:background="@drawable/boton_verde"
        android:layout_below="@+id/btnMapa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>
